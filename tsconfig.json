{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": [
        "dist",
        "coverage",
        "playwright-report",
        "test-results",
        "data",
        ".claude"
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "types": ["vitest/globals", "bun"]
    }
}
