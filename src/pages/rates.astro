---
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/lib/constants";
import { RatesCalculator } from "@/components/rates/RatesCalculator";
---

<Layout title={`Rates | ${SITE.name}`}>
	<div class="container mx-auto px-4 py-8">
		<div class="mb-6">
			<h1 class="text-2xl font-bold tracking-tight mb-1">Mortgage Rates</h1>
			<p class="text-muted-foreground text-sm">
				Compare mortgage rates from Irish lenders based on your property details.
			</p>
		</div>

		<RatesCalculator client:load />
	</div>
</Layout>
