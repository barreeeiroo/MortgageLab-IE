---
import { TrendingUp } from "lucide-react";
import Layout from "@/layouts/Layout.astro";
import { RatesInputIsland } from "@/components/rates/RatesInputIsland";
import { CustomRatesIsland } from "@/components/custom-rates/CustomRatesIsland";
import { RatesToolbarIsland } from "@/components/rates/RatesToolbarIsland";
import { RatesTableIsland } from "@/components/rates/RatesTableIsland";
import { SimulateRedirectAlert } from "@/components/rates/SimulateRedirectAlert";
---

<Layout
	title="Rates"
	description="Compare current mortgage rates from all major Irish lenders. Filter by LTV, fixed rate period, and property type. Updated regularly with the latest offers."
>
	<div class="container mx-auto px-4 py-8">
		<SimulateRedirectAlert client:load />
		<div class="mb-6 flex items-start gap-3">
			<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-primary/10">
				<TrendingUp className="h-5 w-5 text-primary" />
			</div>
			<div>
				<h1 class="text-xl font-semibold">Mortgage Rates</h1>
				<p class="text-muted-foreground text-sm">
					Compare mortgage rates from Irish lenders based on your property details.
				</p>
			</div>
		</div>

		<RatesInputIsland client:load />
		<div class="mt-4 flex items-start gap-2">
			<CustomRatesIsland client:load />
			<div class="flex-1">
				<RatesToolbarIsland client:load />
			</div>
		</div>
		<RatesTableIsland client:idle />
	</div>
</Layout>
