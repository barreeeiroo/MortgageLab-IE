---
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/lib/constants";
import { RatesCalculator } from "@/components/calculators/RatesCalculator";
---

<Layout title={`Rates | ${SITE.name}`}>
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-4xl mx-auto">
			<div class="mb-8">
				<h1 class="text-3xl font-bold tracking-tight mb-2">Mortgage Rates</h1>
				<p class="text-muted-foreground">
					Compare mortgage rates from Irish lenders based on your property details.
				</p>
			</div>

			<RatesCalculator client:load />
		</div>
	</div>
</Layout>
