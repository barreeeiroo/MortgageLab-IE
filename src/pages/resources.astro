---
import { ExternalLink } from "lucide-react";
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import Layout from "../layouts/Layout.astro";
import { EXTERNAL_RESOURCES } from "@/lib/constants/site";

const categories = Object.values(EXTERNAL_RESOURCES);
---

<Layout
	title="Other Tools & Resources"
	description="Helpful external resources for your mortgage journey in Ireland. Official guides, comparison tools, and informational websites from trusted sources."
>
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-4xl mx-auto">
			<div class="mb-10">
				<h1 class="text-3xl font-bold tracking-tight mb-2">Other Tools & Resources</h1>
				<p class="text-muted-foreground">
					Useful external resources to help you with your mortgage journey in Ireland.
				</p>
			</div>

			<div class="space-y-8">
				{categories.map((category) => (
					<Card className="py-0">
						<CardHeader className="pb-4 pt-6">
							<CardTitle className="text-xl">{category.title}</CardTitle>
							<CardDescription>{category.description}</CardDescription>
						</CardHeader>
						<CardContent className="pb-6">
							<div class="divide-y divide-border">
								{category.items.map((resource) => (
									<a
										href={resource.url}
										target="_blank"
										rel="noopener noreferrer"
										class="group flex items-start justify-between gap-4 py-4 first:pt-0 last:pb-0"
									>
										<div>
											<h3 class="font-medium group-hover:text-primary transition-colors">
												{resource.name}
											</h3>
											<p class="text-sm text-muted-foreground mt-0.5">
												{resource.description}
											</p>
										</div>
										<ExternalLink className="h-4 w-4 text-muted-foreground shrink-0 mt-1 group-hover:text-primary transition-colors" />
									</a>
								))}
							</div>
						</CardContent>
					</Card>
				))}
			</div>
		</div>
	</div>
</Layout>
