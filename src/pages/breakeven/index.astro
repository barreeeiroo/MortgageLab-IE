---
import { Scale, RefreshCcw, Coins, ArrowRight } from "lucide-react";
import Layout from "@/layouts/Layout.astro";
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import { getPath } from "@/lib/utils/path";

const calculators = [
	{
		title: "Rent vs Buy",
		description:
			"Compare the long-term costs of renting versus buying. Factor in rent increases, home appreciation, and building equity.",
		href: "/breakeven/rent-vs-buy",
		Icon: Scale,
	},
	{
		title: "Cashback Comparison",
		description:
			"Compare mortgages with different rates and cashback offers to find the cheapest option over time.",
		href: "/breakeven/cashback",
		Icon: Coins,
	},
	{
		title: "Remortgage",
		description:
			"Calculate how long it takes to recoup switching costs when remortgaging to a lower rate.",
		href: "/breakeven/remortgage",
		Icon: RefreshCcw,
	},
];
---

<Layout
	title="Breakeven Calculators"
	description="Financial breakeven calculators for Irish mortgages. Compare rent vs buy costs and calculate remortgage switching savings."
>
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-4xl mx-auto">
			<div class="mb-8">
				<h1 class="text-3xl font-bold tracking-tight mb-2">
					Breakeven Calculators
				</h1>
				<p class="text-muted-foreground">
					Make informed financial decisions with our breakeven analysis tools.
					Understand when buying beats renting, or when switching mortgages pays
					off.
				</p>
			</div>

			<div class="grid gap-6 sm:grid-cols-2">
				{
					calculators.map((calc) => (
						<a href={getPath(calc.href)} class="block group">
							<Card className="h-full hover:border-primary/50 transition-colors">
								<CardHeader>
									<div class="flex items-center gap-3">
										<div class="p-2.5 rounded-lg bg-primary/10">
											<calc.Icon className="h-5 w-5 text-primary" />
										</div>
										<CardTitle className="text-lg">{calc.title}</CardTitle>
									</div>
									<CardDescription>{calc.description}</CardDescription>
								</CardHeader>
								<CardContent>
									<span class="inline-flex items-center gap-1 text-primary font-medium text-sm group-hover:gap-2 transition-all">
										Calculate <ArrowRight className="h-4 w-4" />
									</span>
								</CardContent>
							</Card>
						</a>
					))
				}
			</div>
		</div>
	</div>
</Layout>
