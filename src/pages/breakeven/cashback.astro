---
import Layout from "@/layouts/Layout.astro";
import { CashbackInputsIsland } from "@/components/breakeven/CashbackInputsIsland";
import { BreakevenResultIsland } from "@/components/breakeven/BreakevenResultIsland";
---

<Layout
	title="Cashback Comparison"
	description="Compare mortgages with different rates and cashback offers to find the cheapest option over time. Factor in cashback percentages, flat amounts, and caps."
>
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-4xl mx-auto">
			<div class="mb-8">
				<h1 class="text-3xl font-bold tracking-tight mb-2">Cashback Comparison</h1>
				<p class="text-muted-foreground">
					Compare mortgages with different rates and cashback offers.
					Find out which combination is cheapest over time, whether it's a higher rate with more cashback or a lower rate with less cashback.
				</p>
			</div>

			<CashbackInputsIsland client:load />
			<BreakevenResultIsland client:idle />
		</div>
	</div>
</Layout>
