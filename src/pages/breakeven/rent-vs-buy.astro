---
import Layout from "@/layouts/Layout.astro";
import { RentVsBuyInputsIsland } from "@/components/breakeven/rent-vs-buy/RentVsBuyInputsIsland";
import { RentVsBuyResultIsland } from "@/components/breakeven/rent-vs-buy/RentVsBuyResultIsland";
---

<Layout
	title="Rent vs Buy"
	description="Calculate the breakeven point between renting and buying in Ireland. See when ownership becomes more cost-effective than renting."
>
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-4xl mx-auto">
			<div class="mb-8">
				<h1 class="text-3xl font-bold tracking-tight mb-2">Rent vs Buy</h1>
				<p class="text-muted-foreground">
					Compare the true cost of renting versus buying over time.
					Find out when buying becomes the better financial choice.
				</p>
			</div>

			<RentVsBuyInputsIsland client:load />
			<RentVsBuyResultIsland client:idle />
		</div>
	</div>
</Layout>
