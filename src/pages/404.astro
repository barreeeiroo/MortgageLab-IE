---
import { CircleAlert, Home, Table } from "lucide-react";
import { buttonVariants } from "@/components/ui/button";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found" description="The page you're looking for doesn't exist.">
	<div class="min-h-[calc(100svh-8rem)] flex items-center justify-center px-4">
		<div class="max-w-md text-center space-y-6">
			<p class="text-9xl font-black text-primary">404</p>
			<h1 class="text-2xl font-bold tracking-tight flex items-center justify-center gap-2">
				<CircleAlert className="size-6 text-primary" />
				Page Not Found
			</h1>
			<p class="text-muted-foreground">
				The page you're looking for doesn't exist or has been moved.
			</p>
			<div class="flex gap-4 justify-center pt-4">
				<a href="/" class={buttonVariants()}>
					<Home className="size-4" />
					Go Home
				</a>
				<a href="/rates" class={buttonVariants({ variant: "outline" })}>
					<Table className="size-4" />
					View Rates
				</a>
			</div>
		</div>
	</div>
</Layout>
