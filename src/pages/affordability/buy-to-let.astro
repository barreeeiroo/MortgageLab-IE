---
import Layout from "@/layouts/Layout.astro";
import { BuyToLetCalculator } from "@/components/borrowing/BuyToLetCalculator";
---

<Layout
	title="Buy to Let Calculator"
	description="Calculate your buy-to-let mortgage capacity in Ireland. See how rental income, deposit requirements, and lending limits affect your investment property purchase."
>
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-4xl mx-auto">
			<div class="mb-8">
				<h1 class="text-3xl font-bold tracking-tight mb-2">Buy to Let</h1>
				<p class="text-muted-foreground">
					For investment properties, including second homes without selling your current residence.
					See how rental income, deposit, and income limits affect your borrowing capacity.
				</p>
			</div>

			<BuyToLetCalculator client:load />
		</div>
	</div>
</Layout>
