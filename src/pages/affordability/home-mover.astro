---
import Layout from "@/layouts/Layout.astro";
import { HomeMoverCalculator } from "@/components/borrowing/HomeMoverCalculator";
---

<Layout
	title="Home Mover Calculator"
	description="Calculate your borrowing capacity when moving home in Ireland. Factor in your property equity, savings, and income to see what you can afford."
>
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-4xl mx-auto">
			<div class="mb-8">
				<h1 class="text-3xl font-bold tracking-tight mb-2">Home Mover</h1>
				<p class="text-muted-foreground">
					For homeowners selling their current property and buying a new primary residence.
					Calculate how much you could borrow using your equity from the sale plus any additional savings.
				</p>
			</div>

			<HomeMoverCalculator client:load />
		</div>
	</div>
</Layout>
