---
import { Github, Mail } from "lucide-react";
import { AUTHOR } from "@/lib/constants";
import { FooterLinks } from "@/components/FooterLinks";

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-muted/30">
	<div class="container mx-auto px-4 py-8">
		<div class="flex flex-col gap-4 text-muted-foreground">
			<!-- Row 1: Modals (left) and GitHub links (right) -->
			<FooterLinks client:load />

			<!-- Row 2: Copyright (left) and Contact links (right) -->
			<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
				<p class="text-sm">
					&copy; {currentYear} <a
						href={AUTHOR.website}
						target="_blank"
						rel="noopener noreferrer"
						class="text-primary hover:underline"
					>{AUTHOR.name}</a>. All rights reserved.
				</p>
				<div class="flex items-center gap-4 text-sm">
					<a
						href={`mailto:${AUTHOR.email}`}
						class="inline-flex items-center gap-1.5 hover:text-foreground transition-colors"
					>
						<Mail className="h-4 w-4" />
						<span>Contact</span>
					</a>
					<a
						href={AUTHOR.github}
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-1.5 hover:text-foreground transition-colors"
					>
						<Github className="h-4 w-4" />
						<span>Source Code</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>
